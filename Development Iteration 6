images = {}
def menu_full():
    menu = Frame(window, bg="white")
    menu.grid(row=0, column=0, sticky="nsew")
    canvass = Canvas(menu, width=1000, height=600, bg="white")
    canvass.grid(row=1, column=0, sticky="nsew")


    menu_title = Label(menu, text="Menu", font=("Arial Bold", 20), bg="white")
    menu_title.grid(row=0, column=0, columnspan=3, padx=10, pady=10)

    scroll = Scrollbar(menu, orient=VERTICAL, command=canvass.yview)
    scroll.grid(row=0, rowspan=4, column=2, sticky="ns")

    canvass.configure(yscrollcommand=scroll.set)
    canvass.bind('<Configure>', lambda e: canvass.configure(scrollregion=canvass.bbox("all")))
    second_frame = Frame(canvass)
    canvass.create_window((0,0), window=second_frame, anchor="nw")


    for a in range(12):
        global images
        image_path = f"Internal assessment/Iteration 4/images/{cafemenu[a][3]}"
        item_image = ImageTk.PhotoImage(Image.open(image_path).resize((150, 100)))
        image_path2 = f"Internal assessment/Iteration 4/images/{cafemenu[a+12][3]}"
        item_image2 = ImageTk.PhotoImage(Image.open(image_path2).resize((150, 100)))
        images[a] = [item_image, item_image2]  # Store the PhotoImage object in the dictionary
        
        Label(second_frame, image=images[a][0], bg="white").grid(row=a, column=0, padx=10, pady=10)
        Button(second_frame, text=f"{cafemenu[a+1][0]}").grid(row=a, column=1, padx=10, pady=10)
        Spinbox(second_frame, from_=0, to=10).grid(row=a, column=2, padx=10, pady=10)
        Label(second_frame, image=images[a][1], bg="white").grid(row=a, column=3, padx=10, pady=10)
        Button(second_frame, text=f"{cafemenu[a+1][0]}").grid(row=a, column=4, padx=10, pady=10)
        Spinbox(second_frame, from_=0, to=10).grid(row=a, column=5, padx=10, pady=10)
        canvass.create_line(50, 50, 200, 200)

menu_full()
window.mainloop()
